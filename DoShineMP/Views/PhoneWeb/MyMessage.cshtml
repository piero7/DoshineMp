
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="~/Styles/MyMessage.css" rel="stylesheet" />
}

<!-- 用户信息  -->
<div class="Mymessage">
    <div class="pull-left logo">
        <img src="@ViewBag.user.Headimgurl" class="img-circle" alt="Alternate Text" />
    </div>
    <div class="pull-left Mymessage-name">
        <p>@ViewBag.user.NickName</p>
        <div class="tel">
            手机号：<span>@ViewBag.user.UserInfo.PhoneNumber</span>
        </div>
    </div>
    <div class="pull-right andmi">
        <ins class="samil"></ins>
        <b>普通会员</b>
    </div>
</div>


<!-- 导航 -->
<div class="marginB Mymessage-list">
    <ul class="list-group">
        <li class="list-group-item">
            <span class="Mymessage-icon1 icon"></span>
            <p> 个人信息</p>
            <span class="glyphicon  glyphicon-menu-right pull-right"></span>
        </li>
        <li class="list-group-item" style="margin-bottom:-2px;">
            <span class="Mymessage-icon2 icon"></span>
            <p>我的报修</p>
            <span class="glyphicon  glyphicon-menu-right pull-right"></span>
        </li>
        <li class="list-group-item">
            <span class="Mymessage-icon3 icon"></span>
            <p>我的留言</p>
            <span class="glyphicon  glyphicon-menu-right pull-right"></span>
        </li>
        <li class="list-group-item">
            <span class="Mymessage-icon4 icon"></span>
            <p>公司介绍</p>
            <span class="glyphicon  glyphicon-menu-right pull-right"></span>
        </li>
    </ul>
</div>


@section scripts{
    <script src="~/Scripts/Commons.js"></script>
    <script type="text/javascript">
        $(document).on('click', '.list-group-item', function () {
            switch ($(this).children().eq(0).attr("class")) {
                case 'Mymessage-icon1 icon':; break;
                case 'Mymessage-icon2 icon': window.location.href = '@Url.Action("Repair","PhoneWeb")'; break;
                case 'Mymessage-icon3 icon': window.location.href = '@Url.Action("Messages","PhoneWeb")'; break;
                case 'Mymessage-icon4 icon': window.location.href = 'http://mp.weixin.qq.com/s?__biz=MjM5MTI4MDAyMQ==&mid=416121858&idx=1&sn=1a37a4e8295c88930e43eec998a2e904&scene=18#wechat_redirect'; break;
            }
        })

        $('.list-group-item').click(function () {

        })

    </script>
}