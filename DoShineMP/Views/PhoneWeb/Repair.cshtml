@section scripts{
    <script src="~/Scripts/Commons.js"></script>
    <script type="text/javascript">
        $('#btn').click(function () {
            var keeptext = $('#keep').val();
            var code = $.getUrlParam('code');

            $.post('@Url.Action("RepairJson","PhoneWeb")', { code: code, content: keeptext }, function (data, status) {
                if (status == 'success') {
                    if (data.msg == 'Y') {
                        alert("提交成功！");
                    }
                }
            })
        })

    </script>
}
