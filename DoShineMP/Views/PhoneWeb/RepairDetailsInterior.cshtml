                                <li class="current"></li>
                                <li></li>
                                <li></li>
                                <li></li>
                            </ul>
                            <span class="line"></span>
                            <span class="line-current"></span>
                        </div>
                        <ul class="state-time Ani">
                            <li class="current">提交</li>
                            <li>受理</li>
                            <li>确认</li>
                            <li>完成</li>
                        </ul>
                    }
                    else if (ViewBag.RepairDetail.Status == DoShineMP.Models.RepairStatus.Accept)
