@section scripts{
    <script src="~/Scripts/zepto.min.js"></script>
    <script type="text/javascript">
        var key = true;
        var Child = null;
        $('.select-val').tap(function (e) {
            console.log(e);
            if (key) {
                $(this).siblings('.select-ul').css({ 'height': 'auto', 'display': 'block' });
                InFor($(this).children(),'active');
                $(this).siblings('.jia').addClass('current')
                key = false;
                console.log(this.children)
            } else {
                InFor($(this).children(), "");
                $(this).siblings('.select-ul').css({ 'height': '0', 'display': 'none' });
                $(this).siblings('.jia').removeClass('current')
                key = true;
            }
        })


        $('.itme-select li').tap(function (e) {
            $(this).addClass('current').siblings().removeClass('current');

        })

        //  Select ul js
        var Sele = document.getElementsByClassName('select-ul')[0].children;
        var Leng = Sele.length;
        function InFor(a,c) {
            var i = 0;
            var timer = null;
            timer = setInterval(function () {
                Sele[i].className = c;
                i++;
                if (i == Leng) {
                    clearInterval(timer);
                }
            }, 100)


            $('.select-ul li').tap(function (e) {
                $(this).parent().prev().prev().val($(this).text())
                //$('.select-val').val($(this).text())
               $(this).parent().css({ 'height': '0', 'display': 'none' });
                key = true;
                InFor("")
            })
        }




        //  submit js
        var Fund, Jion, Name, Tel, Mail, Corr, Site, Behaif, Commit,ImgSrc = [];

        $('.submit-btn').tap(function () {
            Fund = $('.itme-select li.current').text();
            Jion = $('#val').val();
            Name = $('.Name').val();
            Tel = $('.Tel').val();
            Mail = $('.Mail').val();
            Corr = $('.Corr').val();
            Site = $('.Site').val();
            Behaif = $('#val1').val();
            Commit = $('.conmmit').val();
            ImgSrcLen = $('.photo').find('img');
            $.each(ImgSrcLen, function (i, item) {
                console.log(item)
                console.log(i)
                ImgSrc[i] = item.src
            })
            var Inputs = $('.itme dd').find('input');
            $.each(Inputs,function (i, item) {
                if (Inputs[i].value == '' || Inputs[i].value == null) {
                    document.body.scrollTop = item.offsetTop+40;
                    console.log( document.body.scrollTop = item.offsetTop)
                }
            })
           //  alert(Fund + Jion + Name + Tel + Mail + Corr + Site + Behaif + Commit)
        })
    </script>

